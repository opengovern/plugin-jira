{
  "integration_type_id": "jira_cloud",
  "integration_name": "Jira Account",
  "help_text_md": "Jira Account integration allows secure connections to your Jira servers.",
  "platform_documentation": "https://developer.atlassian.com/cloud/jira/platform/rest/v3/",
  "provider_documentation": "https://www.atlassian.com/software/jira",
  "icon": "jira.svg",
  "discover": {
    "credentials": [
      {
        "type": "api_key",
        "label": "API KEY",
        "priority": 1,
        "fields": [
          {
            "name": "api_key",
            "label": "API KEY",
            "inputType": "password",
            "required": true,
            "order": 1,
            "validation": {
              "pattern": "^[a-zA-Z0-9+_/-]{0,200}$",
              "errorMessage": "API KEY must be a 100-character alphanumeric string."
            },
            "info": "Your API key with appropriate scopes.",
            "external_help_url": "https://support.atlassian.com/atlassian-account/docs/manage-api-tokens-for-your-atlassian-account/"
          },
          {
            "name": "username",
            "label": "Username",
            "inputType": "text",
            "required": true,
            "order": 2,
            "validation": {
              "pattern": "^[a-zA-Z0-9+_/-]{0,200}$",
              "errorMessage": ""
            },
            "info": "Your email address associated with jira account",
            "external_help_url": ""
          },
          {
            "name": "base_url",
            "label": "Base URL",
            "inputType": "text",
            "required": true,
            "order": 3,
            "validation": {
              "pattern": "^[a-zA-Z0-9+_/-]{0,200}$",
              "errorMessage": ""
            },
            "info": "The address of your jira server",
            "external_help_url": ""
          }
        ]
      }
    ],
    "integrations": [
    ]
  },
  "render": {
    "credentials": {
      "defaultPageSize": 10,
      "fields": [
        {
          "name": "id",
          "label": "ID",
          "fieldType": "text",
          "order": 1,
          "sortable": true,
          "filterable": true,
          "info": "ID.",
          "detail": false,
          "detail_order": 1
        },
        {
          "name": "created_at",
          "label": "Created At",
          "fieldType": "date",
          "order": 2,
          "sortable": true,
          "filterable": true,
          "info": "Timestamp when the credential was created.",
          "detail": false,
          "detail_order": 2
        },
        {
          "name": "updated_at",
          "label": "Updated At",
          "fieldType": "date",
          "order": 3,
          "sortable": true,
          "filterable": true,
          "info": "Timestamp when the credential was last updated.",
          "detail": false,
          "detail_order": 3
        },
        {
          "name": "credential_type",
          "label": "Credential Type",
          "fieldType": "text",
          "required": true,
          "order": 4,
          "info": "Type of Credential used.",
          "valueMap": {
            "api_key": "API Key",
            "base_url": "Server base URL",
            "username": "email address associated with account"
          },
          "detail": false,
          "detail_order": 4
        }
      ]
    },
    "integrations": {
      "defaultPageSize": 15,
      "fields": [
        {
          "name": "name",
          "label": "Name",
          "fieldType": "text",
          "order": 1,
          "sortable": true,
          "filterable": true,
          "info": "Name.",
          "detail": true,
          "detail_order": 1
        },
        {
          "name": "provider_id",
          "label": "Provider ID",
          "fieldType": "text",
          "order": 2,
          "sortable": true,
          "filterable": true,
          "info": "Provider ID.",
          "detail": true,
          "detail_order": 2
        },
        {
          "name": "state",
          "label": "State",
          "fieldType": "status",
          "order": 3,
          "sortable": true,
          "filterable": true,
          "detail": true,
          "detail_order": 3,
          "info": "Current state of the Jira account integration.",
          "statusOptions": [
            {
              "value": "ACTIVE",
              "label": "Active",
              "color": "green"
            },
            {
              "value": "INACTIVE",
              "label": "Inactive",
              "color": "red"
            },
            {
              "value": "ARCHIVED",
              "label": "Archived",
              "color": "blue"
            }
          ]
        }
      ]
    }
  },
  "actions": {
    "credentials": [
      {
        "type": "view",
        "label": "View"
      },
      {
        "type": "update",
        "label": "Update",
        "editableFields": ["api_key", "base_url", "username"]
      },
      {
        "type": "delete",
        "label": "Delete",
        "confirm": {
          "message": "Are you sure you want to delete this credential? This action cannot be undone.",
          "condition": {
            "field": "integration_count",
            "operator": "==",
            "value": 0,
            "errorMessage": "Credential cannot be deleted because it is used by active integrations."
          }
        }
      }
    ],
    "integrations": [
      {
        "type": "view",
        "label": "View"
      },
      {
        "type": "delete",
        "label": "Delete",
        "confirm": {
          "message": "Are you sure you want to delete this integration? This action cannot be undone."
        }
      },
      {
        "type": "health_check",
        "label": "Health Check",
        "tooltip": "Run a health check on the integration to verify connectivity and configuration."
      }
    ]
  }
}
